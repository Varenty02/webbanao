@model webbanao.Views.Shared.Component.CategoryNav.CategoryNavData
<style>
    .active{
        font-weight:bold;
    }
</style>
@if (Model.Categories?.Count > 0)
{
    foreach(var item in Model.Categories)
    {
        var cssActive = item.Slug == Model.CategorySlug ? "active" : "";

        <a class="p-2 text-muted @cssActive" asp-controller="ViewPost" asp-action="Index" asp-route-slug="@item.Slug">@item.Title</a>
    }
}
